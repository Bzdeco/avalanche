<?xml version="1.0" encoding="UTF-8"?>

<?import gui.Viewport?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.Controller" prefHeight="600.0" prefWidth="800.0"
            xmlns="http://javafx.com/javafx/8">
    <left>
        <Accordion BorderPane.alignment="CENTER" expandedPane="$viewPane">
            <panes>
                <TitledPane fx:id="viewPane" animated="false" text="Widok">
                    <TreeView fx:id="layerSelector" editable="true"/>
                </TitledPane>
                <TitledPane animated="false" text="Parametry symulacji">
                    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0"/>
                </TitledPane>
                <TitledPane animated="false" text="Eksport danych">
                    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0"/>
                </TitledPane>
            </panes>
        </Accordion>
    </left>
    <center>
        <Viewport fx:id="vp"/>
    </center>
    <bottom>
        <TitledPane expanded="false" animated="false" text="Pogoda" BorderPane.alignment="CENTER">
            <VBox prefHeight="200.0" prefWidth="100.0">
                <HBox prefHeight="100.0" prefWidth="200.0">
                    <Button fx:id="playBtn" mnemonicParsing="false" text="Play"/>
                    <Label text="From"/>
                    <DatePicker fx:id="fromDate"/>
                    <Label text="To"/>
                    <DatePicker fx:id="toDate"/>
                    <Button fx:id="submitBtn" mnemonicParsing="false" text="Submit"/>
                </HBox>
                <!--<ScrollPane prefHeight="200.0" prefWidth="200.0">-->
                <ScrollPane>
                    <TableView fx:id="tableView">
                        <!--<columns>-->
                        <!--<TableColumn fx:id="playBtn" prefWidth="75.0" text="time" />-->
                        <!--<TableColumn fx:id="playBtn" prefWidth="110.0" text="temperature" />-->
                        <!--<TableColumn fx:id="playBtn" prefWidth="53.0" text="wind" />-->
                        <!--<TableColumn fx:id="playBtn" prefWidth="109.0" text="precipitation" />-->
                        <!--</columns>-->
                    </TableView>
                </ScrollPane>
            </VBox>
        </TitledPane>
    </bottom>
    <top>
        <ToolBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <Button fx:id="centerView" mnemonicParsing="false" text="Wycentruj"/>
            <ProgressBar fx:id="progress"/>
            <Pane HBox.hgrow="ALWAYS"/>
            <Hyperlink fx:id="aboutUsLink" text="O Projekcie"/>
        </ToolBar>
    </top>
</BorderPane>
